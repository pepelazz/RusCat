#main
    .container
        section#portfolio_item
            .hgroup
                ul.breadcrumb.pull-left
                    li
                        a(href='/') Начало
                        span.divider /
                    li
                        a(href='#{path}production.html') Продукция
                        span.divider /
                    li.active #{shortName}
            .row
                .span8
                    section#portfolio_slider_wrapper
                        #portfolio_slider.flexslider
                            ul.slides
                                each val, index in imageLinks
                                    li.item(data-thumb='#{path}images/production/#{val}', style='background-image: url(#{path}images/production/#{val});')
                                        .container
                                            .carousel-caption
                                                p.lead #{imageSigns[index]}
                        #carousel.flexslider
                            ul.slides
                                each val, index in imageLinks
                                    li
                                        img(src='#{path}images/production/#{val}', alt='')
                    if shortName=='ВПЯК'
                        include ./../includes/vpykTable.jade
                        img(src='./../images/production/vpyk-classified.png')
                    if shortName=='Noalab Shaker'
                        .video-container
                            iframe(width='1280', height='720', src='//www.youtube.com/embed/C7OtLIbOwXM?showinfo=0', frameborder='0', allowfullscreen='allowfullscreen')
                .span4
                    article.production_details
                        h3.well #{nameRU}
                        if productDescription
                            .well
                                p
                                    strong Описание
                                |   !{productDescription}
                        if productTechnical
                            .well
                                p
                                    strong Технические характеристики
                                | !{productTechnical}
                        if productUsage
                            .well
                                p
                                    strong Применение
                                | !{productUsage}
                        if productAdvantages
                            .well
                                p
                                    strong Преимущества
                                | !{productAdvantages}
                        if productOther
                            | !{productOther}
        ul.pager
            if productPrevious
                li#previous.previous
                    a(href='#{path}production/#{productPrevious}.html') ← Предыдущий
            if productNext
                li#next.next
                    a(href='#{path}production/#{productNext}.html') Следующий →