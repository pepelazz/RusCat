block content
    #main
        .container
            .hgroup
                h1 Аутсорсинг
                ul.breadcrumb.pull-right
                    li
                        a(href='') Начало
                        span.divider /
                    li.active Аутсорсинг
            .row
                .span9
                    .row
                        .production_item.span3
                            .production_photo(style='background-image: url(#{path}images/production/outsourcing-sintez.svg)')
                                a(href='')
                            .production_description
                                h3
                                    a(href='#{path}production/shaker.html') Заказной синтез
                        .production_item.span3
                            .production_photo(style='background-image: url(#{path}images/production/outsourcing-h2.svg)')
